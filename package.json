{
  "type": "module",
  "scripts": {
    "docker-dev:up": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up --build",
    "docker-dev:down": "docker compose -f docker-compose.yml -f docker-compose.dev.yml down -v",
    "docker-prod:up": "docker compose -f docker-compose.yml -f docker-compose.prod.yml up --build",
    "docker-prod:down": "docker compose -f docker-compose.yml -f docker-compose.prod.yml down",
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.26",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.1",
    "@types/pg": "^8.15.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.2"
  }
}
